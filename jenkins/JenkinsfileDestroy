pipeline {
    agent any

    environment {
        TF_VAR_FILE = credentials('terraform-vars-file')
    }

    stages {
        stage('Terraform Destroy') {
            steps {
                dir('terraform') {
                    withCredentials([file(credentialsId: 'terraform-vars-file', variable: 'TFVARS_FILE')]) {
                        sh 'terraform init'
                        sh 'terraform destroy -auto-approve -var-file=$TFVARS_FILE'
                    }
                }
            }
        }
    }
}
